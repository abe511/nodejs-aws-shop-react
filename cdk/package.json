{
  "name": "cdk",
  "version": "0.1.0",
  "bin": {
    "cdk": "bin/cdk.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "deploy": "cdk deploy",
    "invalidate": "aws cloudfront create-invalidation --distribution-id ${DISTRIBUTION_ID} --paths '/*'",
    "upload": "aws s3 sync ../dist/ s3://${S3_BUCKET_NAME}",
    "upload-dist": "aws s3 sync '../dist/*' s3://react-shop-app-bucket",
    "deploy-all": "npm run deploy && npm run upload && npm run invalidate"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "20.9.0",
    "aws-cdk": "2.106.1",
    "aws-cli": "^0.0.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "~5.2.2"
  },
  "dependencies": {
    "@aws-cdk/aws-cloudfront": "^1.204.0",
    "@aws-cdk/aws-iam": "^1.204.0",
    "@aws-cdk/aws-s3": "^1.204.0",
    "@aws-cdk/core": "^1.204.0",
    "aws-cdk-lib": "2.106.1",
    "constructs": "^10.0.0",
    "source-map-support": "^0.5.21"
  }
}
